<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_add_a_photo"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:textColor="@color/textColorDark"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/bnNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hапоминания"
        android:textSize="18sp"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_notifications"
        android:drawablePadding="16dp"
        android:layout_margin="16dp"
        android:textColor="@color/textColorDark"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_notifications" />

    <ImageView
        android:id="@+id/height_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/height"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/height_edit"
        app:layout_constraintBottom_toBottomOf="@id/height_edit"
        android:layout_marginLeft="32dp" />

    <EditText
        android:id="@+id/height_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="165 см"
        android:textSize="18sp"
        android:background="@drawable/background_field"
        android:layout_margin="16dp"
        android:textColor="@color/textColorDark"
        app:layout_constraintStart_toEndOf="@id/height_icon"
        app:layout_constraintTop_toBottomOf="@id/bnNotifications"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/weight_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/weight"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/weight_edit"
        app:layout_constraintBottom_toBottomOf="@id/weight_edit"
        android:layout_marginLeft="32dp" />

    <EditText
        android:id="@+id/weight_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 кг"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_field"
        android:textColor="@color/textColorDark"
        app:layout_constraintStart_toEndOf="@id/height_icon"
        app:layout_constraintTop_toBottomOf="@id/height_edit"
        android:textAlignment="center"
        android:layout_marginLeft="16dp" />


    <ImageView
        android:id="@+id/need_weight_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/weight"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/need_weight_edit"
        app:layout_constraintBottom_toBottomOf="@id/need_weight_edit"
        android:layout_marginLeft="32dp" />

    <EditText
        android:id="@+id/need_weight_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75 кг"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_field"
        android:textColor="@color/textColorDark"
        app:layout_constraintStart_toEndOf="@id/height_icon"
        app:layout_constraintTop_toBottomOf="@id/weight_edit"
        android:textAlignment="center"
        android:layout_marginLeft="16dp" />


    <TextView
        android:id="@+id/bnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signout"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/need_weight_edit"/>

</android.support.constraint.ConstraintLayout>